<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".social_media.activities.GoLiveActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/go_live_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-15dp"
        android:background="@color/primary">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Id"
        android:id="@+id/go_live_username"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_live_check_btn"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Live"
        android:textAllCaps="false"
        app:cornerRadius="8dp"
        android:backgroundTint="#F44336"
        app:layout_constraintEnd_toStartOf="@+id/go_live_download_btn"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/download_icon"
        android:id="@+id/go_live_download_btn"
        app:layout_constraintEnd_toStartOf="@+id/go_live_close_btn"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/go_live_close_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/close_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/go_live_viewers_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12M Viewers"
        android:textAllCaps="false"
        android:background="@drawable/live_background"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/go_live_toolbar"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/go_live_members_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 Members"
        android:textAllCaps="false"
        android:background="@drawable/live_background"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@+id/go_live_viewers_tv"
        app:layout_constraintTop_toBottomOf="@id/go_live_toolbar"/>
    <TextView
        android:id="@+id/go_live_timings_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:02:57 h"
        android:textAllCaps="false"
        android:background="@drawable/live_background"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@+id/go_live_members_tv"
        app:layout_constraintTop_toBottomOf="@id/go_live_toolbar"/>
    <TextView
        android:id="@+id/go_live_add_members_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/go_live_toolbar"
        android:textAllCaps="false"
        android:background="@drawable/live_background"
        android:padding="10dp"
        app:cornerRadius="25dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/stream_container_view"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/go_live_add_members_btn">
        <ImageView
            android:id="@+id/go_live_stream_view"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:src="@drawable/hipster"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/stream_container_view"
        android:id="@+id/filters_container_view">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/hipster"
            android:layout_margin="5dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/hipster"
            android:layout_margin="5dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/hipster"
            android:layout_margin="5dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/hipster"
            android:layout_margin="5dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/hipster"
            android:layout_margin="5dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/hipster"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/live_comments_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:minHeight="150dp"
        app:layout_constraintTop_toBottomOf="@id/filters_container_view"
        tools:listitem="@layout/sample_live_user_comment"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/go_live_sound_btn"/>
    <ImageButton
        android:id="@+id/go_live_sound_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/sound_on_icon"
        app:layout_constraintTop_toBottomOf="@id/live_comments_rv"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
        android:id="@+id/go_live_filter_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/filter_on_icon"
        app:layout_constraintTop_toBottomOf="@id/live_comments_rv"
        app:layout_constraintStart_toEndOf="@id/go_live_sound_btn"
        app:layout_constraintEnd_toStartOf="@id/go_live_save_btn"/>
    <ImageButton
        android:id="@+id/go_live_save_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/download_icon"
        app:layout_constraintTop_toBottomOf="@id/live_comments_rv"
        app:layout_constraintStart_toEndOf="@id/go_live_filter_btn"
        app:layout_constraintEnd_toStartOf="@id/go_live_gallery_btn"/>
    <ImageButton
        android:id="@+id/go_live_gallery_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/image_icon"
        app:layout_constraintTop_toBottomOf="@id/live_comments_rv"
        app:layout_constraintStart_toEndOf="@id/go_live_save_btn"
        app:layout_constraintEnd_toStartOf="@id/go_live_add_btn"/>
    <ImageButton
        android:id="@+id/go_live_add_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/plus_icon"
        app:layout_constraintTop_toBottomOf="@id/live_comments_rv"
        app:layout_constraintStart_toEndOf="@id/go_live_gallery_btn"
        app:layout_constraintEnd_toStartOf="@id/go_live_menu"/>
    <ImageButton
        android:id="@+id/go_live_menu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/menu_icon"
        app:layout_constraintTop_toBottomOf="@id/live_comments_rv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/go_live_sound_btn">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/current_user_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/add_your_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:hint="Add your comment..."
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/send_post_comment"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:background="@drawable/send_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>